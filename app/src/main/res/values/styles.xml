<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DetailTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="InfoWindowStyle">
        <item name="android:background">@drawable/bg_infowindow</item>
        <item name="android:padding">8dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="BirdSearchItem">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
</resources>