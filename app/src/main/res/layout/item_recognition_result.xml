<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/item_recognition_padding"
    android:background="?android:attr/selectableItemBackground" >

    <TextView
        android:id="@+id/text_bird_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_recognition_text_size_primary"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        tools:text="@string/tools_recognition_name_sample"/>

    <TextView
        android:id="@+id/text_confidence_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_recognition_text_size_secondary"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginTop="@dimen/item_recognition_spacing_small"
        tools:text="@string/tools_recognition_confidence_sample"/>

    <TextView
        android:id="@+id/text_bird_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_recognition_text_size_secondary"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginTop="@dimen/item_recognition_spacing_medium"
        android:maxLines="3"
        android:ellipsize="end"
        android:visibility="gone"
        tools:text="@string/tools_recognition_description_sample"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/text_baike_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_on_baike"
        android:textSize="@dimen/item_recognition_text_size_secondary"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
        android:paddingTop="@dimen/item_recognition_spacing_medium"
        android:paddingBottom="@dimen/item_recognition_spacing_small"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        tools:visibility="visible"/>

</LinearLayout>