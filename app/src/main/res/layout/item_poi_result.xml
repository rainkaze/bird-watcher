<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/item_poi_padding_horizontal"
    android:paddingTop="@dimen/item_poi_padding_vertical"
    android:paddingEnd="@dimen/item_poi_padding_horizontal"
    android:paddingBottom="@dimen/item_poi_padding_vertical"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tv_poi_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_poi_text_size_primary"
        android:textColor="?android:attr/textColorPrimary"
        tools:text="@string/tools_poi_name_sample" />

    <TextView
        android:id="@+id/tv_poi_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_poi_spacing_vertical"
        android:textSize="@dimen/item_poi_text_size_secondary"
        android:textColor="?android:attr/textColorSecondary"
        tools:text="@string/tools_poi_address_sample" />
</LinearLayout>